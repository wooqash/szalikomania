{
  "name": "Szalikomania App",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npx next dev",
    "build": "npx next build",
    "start": "next start",
    "prettier:check": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "lint": "next lint .",
    "commit": "npx lint-staged && npx pretty-quick --staged",
    "prepare": "husky install",
    "roots": "npx next-roots",
    "roots:watch": "npx next-roots -w"
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,md,mdx}": [
      "prettier -w"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "next": "14.2.7",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commitizen": "^4.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "next-roots": "^3.11.0",
    "prettier": "3.3.3",
    "pretty-quick": "^4.0.0",
    "sass": "^1.77.8",
    "typescript": "^5.4.5"
  }
}
